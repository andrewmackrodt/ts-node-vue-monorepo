{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "include": [
    "./**/*",
    "../common/**/*"
  ]
}
